{% extends 'layout.html.twig' %}

{% block extend_library %}
    <!-- Boostrap 4.4.1 -->
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" rel="stylesheet">

{% endblock %}
    
    
{% block extend_style %}
	<style>
		.label {
			margin-left: 200px;
		}
		
		.container{
			margin-left: 200px; 
			max-width: 80%;
		}

		.table {
			margin: auto;
			width: 70% !important;
		}

		button {
			border: none;
			outline: 0;
			display: inline-block;
			padding: 8px;
			color: white;
			background-color: #00Aede;
			text-align: center;
			cursor: pointer;
			width: 100%;
			font-size: 15px;
			margin: 5px;
		}

		button:hover,
		a:hover {
			opacity: 0.7;
		}
	</style>
{% endblock %}

{% block content %}

    <h2 class="w3-center w3-animate-top" style="color: black; font-size:50px;">AI DevOps Document Templates</h2>
	<hr style="margin:auto;width:20%;border-width:4px; border-color:#00aede; margin-bottom:50px;">
	
	<!-- Folders Title-->
	<h3 class="label">
		Folders 
	</h3>
	<!-- Folders Buttons-->
	<div class="container" >
		<div class="row row-cols-5">
		    {% set rootFolderID = 42 %}
		    
		    {% if(currentFolderID != rootFolderID ) %}
		        <a href={{PIMCORE_URL}}/DocumentManagement/{{parentId}}>
    			    <button type="button" class="btn btn-primary">Back</button>
    			</a>
		    {% endif %}
			
			{% for folder in folderList %}
			
    			<a href={{PIMCORE_URL}}/DocumentManagement/{{folder.getId()}}>
    			    <button type="button" class="btn btn-outline-primary">{{folder.getFilename()}}</button>
    			</a>
			{% endfor %}
		</div>
	  </div>
	  
	<br><hr>
	
	<!-- Files Title-->
	<h3 class="label">
		Files
	</h3>
	
	<!-- Files Table -->
	<div id="file-table" class="container-fluid">
		<table class="table table-bordered table-striped text-center">
			<thead>
				<tr>
					<th>File Name</th>
					<th>File Type</th>
					<th>Date Modified</th>
					<th>Links</th>
				</tr>
			</thead>
			<tbody>
                {% for asset in assetList %}
                    <tr>
                        <td>{{asset.getFilename()}}</td>
    					<td>{{asset.getType()}}</td>
    					<td>{{asset.modifyDate.format("d-m-Y")}}</td>
    					<td>

					    	<a href="{{asset.getRealFullPath()}}"><button>Get File</button></a>
    					</td>
					</tr>
                {% endfor %}
			</tbody>
		</table>

	</div>

{% endblock %}

